<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_bottom"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txt_date_for_hourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="FRI 14/8 11:00 PM"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_weather_stiuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date_for_hourly"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Mostly cloudy"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_weather_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_weather_stiuation"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Humidity: 60%"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txt_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_weather_humidity"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Pressure: 1010 mBar"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/image_for_hourly"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/sun" />

        <TextView
            android:id="@+id/txt_weather_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_for_hourly"
            android:text="27Â°C"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>