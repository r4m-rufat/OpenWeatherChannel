<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Loading..."
            android:layout_below="@+id/txt_clock"
            android:layout_marginTop="20dp"
            android:id="@+id/current_degree"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/weather_stiuation_image"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_clock"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_stiuation"
            android:text="Loading..."
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/weather_stiuation_image"
            android:textSize="15sp"
            android:textColor="@color/white"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_wind_speed"
            android:layout_alignParentRight="true"
            android:layout_below="@id/weather_stiuation_image"
            android:text="Loading..."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txt_feelslike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_below="@+id/weather_stiuation"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sunrise"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_wind_speed"
            android:text="Loading..."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/white"
            android:id="@+id/txt_pressure"
            android:layout_below="@id/txt_feelslike"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:autoLink="all"
            android:textColorLink="@color/white"
            android:text="openweathermap.org"
            android:layout_below="@+id/txt_pressure"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sunset"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_sunrise"
            android:text="Loading..."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>




    </RelativeLayout>


</merge>